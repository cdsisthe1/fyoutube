{
  "manifest_version": 3,
  "name": "fyoutube",
  "version": "2.0",
  "description": "Get direct link of YouTube videos",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "http://localhost:5000/",
    "activeTab",
    "storage",
    "tabs",
    "windows",
    "alarms" 
  ],
  "host_permissions": [
    "http://localhost:5000/"
  ]
}
